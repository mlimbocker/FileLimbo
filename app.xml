        </frameworks>
        <pages>
            <page name="page1" startup="true" pagePath="page/page1.page" jsPath="page/page1.js" managedJsPath="page/page1.managed.js" htmlPath="page/page1.html" cssPath="page/page1.css" managedCssPath="page/page1.managed.css"/>
