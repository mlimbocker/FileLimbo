        </pages>
        <stylesheets>
            <stylesheet type="framework" param="tizen-web-ui-fw/latest/themes/%theme%/tizen-web-ui-fw-theme.css" param2="name='tizen-theme'"/>
            <stylesheet type="user" param="./app.css"/>
        </stylesheets>
    </tizenProject>
</tizenFile>
